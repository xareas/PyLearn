<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.favorites.FavoritesFragment">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_no_favorites"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_shark"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/shark"
                />

            <TextView
                android:id="@+id/text_dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_favorites_added"
                app:layout_constraintTop_toBottomOf="@id/lottie_shark"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center_horizontal"
                android:textSize="27sp"
                android:padding="5sp"
                android:layout_marginStart="@dimen/padding_half"
                android:layout_marginEnd="@dimen/padding_half"
                android:fontFamily="@font/expletus_sans"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>